<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TicTacToe" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#5B6EE1</item>
        <item name="colorPrimaryContainer">#E4E7FB</item>
        <item name="colorSecondary">#FF6F61</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:colorBackground">#F7F8FA</item>

        <item name="android:statusBarColor">#5B6EE1</item>
        <item name="android:navigationBarColor">#E4E7FB</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:backgroundTint">#5B6EE1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="GameCellButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:backgroundTint">@color/game_cell_default_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2C2C2C</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
